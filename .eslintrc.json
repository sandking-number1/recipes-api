{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module"
  },
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "rules": {
    "no-console": [1, {"allow": ["warn", "error"]}],
    "comma-dangle": [2, "never"],
    "semi": [2, "always"],
    "no-extra-semi": 2
  }
}
